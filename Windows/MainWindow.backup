<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DirChat" Height="512" Width="512">
    <Grid>
        <DockPanel>
          <Menu DockPanel.Dock="Top">
            <MenuItem Name="HeaderMenuChat" Header="_Chat">
              <MenuItem Name="HeaderMenuChatJoin" Header="_Join"/>
              <MenuItem Name="HeaderMenuChatCreate" Header="_Create"/>
              <MenuItem Name="HeaderMenuChatClose" Header="_Close">
                <MenuItem Name="HeaderMenuChatCloseClubb" Header="_Clubb"/>
              </MenuItem>
              <MenuItem Name="HeaderMenuChatExit" Header="_Exit"/>
            </MenuItem>
          </Menu>
          <StackPanel></StackPanel>
        </DockPanel>
        <GroupBox Header="Chat" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top">
	        <Grid HorizontalAlignment="Left" Height="226" VerticalAlignment="Top" Width="253" Margin="0,0,-2,-12">
		          <Label Content="These are some pizza toppings." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
		          <CheckBox Content="Cheese" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
		          <CheckBox Content="Mushrooms" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top"/>
              <CheckBox Content="Olives" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top"/>
	        </Grid>
	      </GroupBox>
	      <GroupBox Header="Rooms" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top">
	        <Grid HorizontalAlignment="Left" Height="226" VerticalAlignment="Top" Width="253" Margin="0,0,-2,-12">
		          <Label Content="These are some pizza toppings." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
		          <CheckBox Content="Cheese" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
		          <CheckBox Content="Mushrooms" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top"/>
              <CheckBox Content="Olives" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top"/>
	        </Grid>
	      </GroupBox>
    </Grid>
</Window>