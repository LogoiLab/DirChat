    <CheckBox Grid.Column="2" Grid.Row="3" Margin="4"></CheckBox>
    <Label Grid.Column="0" Grid.Row="4" Margin="4">Repeat Password:</Label>
    <TextBox AcceptsReturn="False" Grid.Column="1" Grid.Row="4" Margin="4" IsEnabled="False"></TextBox>
    <Grid Grid.Row="5" Grid.ColumnSpan="3" ShowGridLines="false" Margin="4">
      <Grid.ColumnDefinitions>
